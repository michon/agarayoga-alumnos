<table class="table-responsibe table_fixed table-bordered">
    <thead>
        <tr>
            <th scope="col justify-content-center"> 
                <%= I18n.t('date.month_names')[@fecha.beginning_of_week.strftime("%m").to_i ] %> 
            </th>
            <%@diasSemana.each do |dia| %>
                <th scope="col">
                    <%fechaCl  = @fecha.beginning_of_week.days_since(dia.dia.to_i-1)%>
                    <%= I18n.t('date.day_names')[dia.dia.to_i] %> 
                    <%= fechaCl.strftime("%d") %>
                </th>
            <% end %>
        </tr>
    </thead> 
    <tbody>
        <% @horarioGeneral.each  do |h| %>
             <tr>
                 <td> <%= h[0] %> </td>
                <% for idx in @diasSemana.first.dia.to_i..@diasSemana.last.dia.to_i do %>
                    <%fechaCl  = @fecha.beginning_of_week.days_since(idx-1)%>
                    <% fechaCl = fechaCl.change(hour: h[0][0..1].to_i, min: h[0][3..4].to_i)%>
                    <td> 
                        <% unless h[1][fechaCl].blank? %>
                        <ol>
                            <% h[1][fechaCl].usuario.each do |alm|%> 
                                <li> <%= alm.nombre %> </li>
                            <% end %>
                        </ol>
                        <%end%>

                    </td>
                <% end %>
            </tr>
        <% end%>
    </tbody>
</table>

<h1>Clase#semana</h1>
<ol>
    <li>
        <p> dias semana: </p>
        <%=@diasSemana.to_json%>
    </li>

