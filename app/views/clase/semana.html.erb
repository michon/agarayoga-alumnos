        <%=@horasDistintas.to_json%>
    </li>

    <li>
        <p> todo: </p>
        <ul>
        <%@horarioGeneral.each do |cl|%>
            <li>   
            <%= cl.to_json %>
            </li>   
        <%end%>
        </ul>
    </li>

</ol>
